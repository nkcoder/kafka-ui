# KAFKA CLUSTER CONFIGURATION
# These settings survive server restarts and provide default connection

# Your Kafka 4.0.0 cluster bootstrap servers
KAFKA_BOOTSTRAP_SERVERS=localhost:29092,localhost:39092

# Client identification for this UI instance
KAFKA_CLIENT_ID=kafka-ui-development

# Cluster display name in the UI
KAFKA_CLUSTER_NAME=Local Development Cluster

# Connection timeouts (milliseconds)
KAFKA_CONNECTION_TIMEOUT=10000
KAFKA_REQUEST_TIMEOUT=30000

# Auto-refresh interval for dashboard metrics (seconds)
KAFKA_METRICS_REFRESH_INTERVAL=30

# Frontend environment variables (NEXT_PUBLIC_ prefix makes them available to client-side)
NEXT_PUBLIC_KAFKA_CLUSTER_NAME=Local Development Cluster
